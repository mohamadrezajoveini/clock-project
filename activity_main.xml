<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    tools:context="com.clock_digital.tamrinclockdigital.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:textSize="20dp"
android:layout_marginRight="7dp"
        android:textColor="#0099FF"
        android:id="@+id/pm"
       android:layout_alignEnd="@id/three"
        android:layout_alignRight="@id/three"
        android:layout_alignParentTop="true"
        android:text="PM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segment7"
        android:layout_marginLeft="75dp"
        android:textSize="60dp"
        android:textColor="#00CCFF"
        android:paddingRight="3dp"
        android:layout_below="@id/pm"
        android:text="05"
        android:id="@+id/five"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:textSize="60dp"
        android:textColor="#00CCFF"
        android:paddingRight="4dp"
        android:layout_below="@id/pm"
        android:layout_toRightOf="@id/five"
        android:text="."
        android:id="@+id/donoghte" />

    <TextView
        android:id="@+id/noghte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:fontFamily="@font/digital7"
        android:text="."
        android:textColor="#00CCFF"
        android:textSize="60dp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:textSize="60dp"
        android:textColor="#00CCFF"
        android:paddingRight="4dp"
        android:layout_below="@id/pm"
        android:layout_toRightOf="@id/five"
        android:text="."
        android:id="@+id/noghte2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segment7"
        android:textSize="60dp"
        android:textColor="#00CCFF"
        android:paddingRight="3dp"
        android:layout_below="@id/pm"
        android:text="52"
        android:layout_toRightOf="@id/noghte2"
        android:id="@+id/fifty_two"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:textSize="60sp"
        android:textColor="#00CCFF"
        android:paddingRight="4dp"
        android:layout_below="@id/pm"
        android:layout_toRightOf="@id/fifty_two"
        android:text=":"
        android:id="@+id/noghte4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segment7"
        android:textSize="60dp"
        android:textColor="#00CCFF"
        android:paddingRight="3dp"
        android:layout_below="@id/pm"
        android:text="03"
        android:layout_toRightOf="@id/noghte4"
        android:id="@+id/three"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:textSize="17dp"
        android:fontFamily="@font/digital7"
        android:textColor="#0099FF"
        android:id="@+id/mon"
        android:layout_below="@id/five"
        android:text="MON" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/digital7"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:id="@+id/tue"
        android:layout_toRightOf="@id/mon"
        android:textSize="17dp"

        android:text="TUE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="8dp"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:textSize="17dp"

        android:id="@+id/weo"
        android:layout_toRightOf="@id/tue"
        android:text="WEO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="8dp"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:id="@+id/thu"
        android:textSize="17dp"
        android:layout_toRightOf="@id/weo"
        android:text="THU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="8dp"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:id="@+id/fri"
        android:textSize="17dp"

        android:layout_toRightOf="@id/thu"
        android:text="FRI" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="8dp"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:textSize="17dp"

        android:id="@+id/sat"
        android:layout_toRightOf="@id/fri"
        android:text="SAT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/digital7"
        android:textColor="#0099FF"
        android:layout_below="@id/five"
        android:id="@+id/sun"
        android:textSize="17dp"

        android:layout_toRightOf="@id/sat"
        android:text="SUN"
        />



    </RelativeLayout>

